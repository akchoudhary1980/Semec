@{   
    Layout = "~/Areas/TenderSearchManage/Views/Shared/_Layout.cshtml";
}

<div class="page-wrapper">
<div class="page-body">
    <div class="row">

        <!-- statustic-card start -->
        <div class="col-xl-3 col-md-6">
            <a href="@Url.Action("Index", "Item" , new { area = "DealersManage" }, null)">
                <div class="card bg-c-yellow text-white">
                    <div class="card-block">
                        <div class="row align-items-center">
                            <div class="col">
                                <p class="m-b-5">Total Items</p>
                                <h4 class="m-b-0">@ViewData["ItemCount"]</h4>
                            </div>
                            <div class="col col-auto text-right">
                                <i class="feather icon-user f-50 text-c-yellow"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </a>
        </div>
        <div class="col-xl-3 col-md-6">
            <a href="@Url.Action("Index", "Dealers" , new { area = "DealersManage" }, null)">
                <div class="card bg-c-green text-white">
                    <div class="card-block">
                        <div class="row align-items-center">
                            <div class="col">
                                <p class="m-b-5">Total Dealers</p>
                                <h4 class="m-b-0">@ViewData["DealerCount"]</h4>
                            </div>
                            <div class="col col-auto text-right">
                                <i class="feather icon-credit-card f-50 text-c-green"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </a>
        </div>
        <div class="col-xl-3 col-md-6">
            <a href="@Url.Action("Index", "Item" , new { area = "DealersManage" }, null)">
                <div class="card bg-c-pink text-white">
                    <div class="card-block">
                        <div class="row align-items-center">
                            <div class="col">
                                <p class="m-b-5">New Items</p>
                                <h4 class="m-b-0">10</h4>
                            </div>
                            <div class="col col-auto text-right">
                                <i class="feather icon-book f-50 text-c-pink"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </a>
        </div>
        <div class="col-xl-3 col-md-6">
            <a href="@Url.Action("Index", "Dealers" , new { area = "DealersManage" }, null)">
                <div class="card bg-c-blue text-white">
                    <div class="card-block">
                        <div class="row align-items-center">
                            <div class="col">
                                <p class="m-b-5">New Dealers</p>
                                <h4 class="m-b-0">0</h4>
                            </div>
                            <div class="col col-auto text-right">
                                <i class="feather icon-shopping-cart f-50 text-c-blue"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </a>
        </div>
        <!-- statustic-card start -->
    </div>
</div>
    </div>


