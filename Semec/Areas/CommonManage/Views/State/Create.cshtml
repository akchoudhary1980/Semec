@model Lis.StateModel
@{    
    Layout = "~/Views/Shared/_Admin.cshtml";
}   

    <div class="row">
        <div class="col-sm-12">
            <div class="card">
                <div class="card-header">
                    <div class="row">
                        <div class="col-sm-9">
                            <h3>@ViewData["PageTitle"]</h3>
                        </div>
                        <div class="col-sm-3">
                            <a asp-action="Index" class="btn btn-primary btn-outline-primary float-right"><i class="icofont icofont-ui-reply"></i> Back</a>
                        </div>
                    </div>
                </div>
                <div class="card-block">
                    <h4 class="sub-title">Add New Records</h4>
                    <form method="post" enctype="multipart/form-data"  asp-action="Create" >

                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="form-group row">
                            <label asp-for="StateName" class="col-sm-2 col-form-label"></label>
                            <div class="col-sm-10">
                                <input asp-for="StateName" class="form-control" placeholder="eg Madhya Pradesh" />
                                <span asp-validation-for="StateName" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group row">
                            <label asp-for="StateType" class="col-sm-2 col-form-label"></label>
                            <div class="col-sm-4">
                                <select asp-for="StateType" class="form-control" asp-items="@Semec.Areas.CommonManage.Controllers.GetStateTypeList()"> </select>
                                <span asp-validation-for="StateType" class="text-danger"></span>
                            </div>
                            <label asp-for="CountryID" class="col-sm-2 col-form-label"></label>
                            <div class="col-sm-4">
                                <select asp-for="CountryID" class="form-control" asp-items="@Semec.Areas.CommonManage.Controllers.GetCountryList()"> </select>
                                <span asp-validation-for="CountryID" class="text-danger"></span>
                            </div>
                        </div>                        

                        <div class="form-group row">
                            <div class="col-sm-12">
                                <input type="submit" value="Create" class="btn btn-primary btn-out float-right" />
                            </div>
                        </div>

                    </form>
                </div>
            </div>
            <!-- Default card end -->
        </div>
    </div>

